#input_variable = input("Here enter your value: ")
#print(input_variable)

text = input("Enter some text: ")
choice = input("Enter 1 to uppercase and 2 to lowercase: ")

#remember, input is string!
if choice == "1":
  print(text.upper())
elif choice == "2":
  print(text.lower())
else:
  print("Enter 1 or 2 only!")
