answer = input("Enter string to test for palindrome or \'exist\': ")

while answer != "exist":
  
  if answer[0] == answer[-1]:
    a = True
  else:
    a = False
  result = f"Palindrome test: {a}"
  print(result) 
  answer = input("Enter string to test for palindrome or \'exist\': ")

